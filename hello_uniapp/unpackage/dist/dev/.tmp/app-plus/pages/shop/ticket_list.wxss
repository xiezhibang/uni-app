page{
	background: #F2F2F2;
}
.top_wrap{
	position: fixed;
	top:calc(128rpx + var(--status-bar-height));
	left: 0;
	z-index: 2000;
	width: 750rpx;
	height: 100rpx;
	background: #fff;
}
.list_control{
	width: 600rpx;
	height: 80rpx;
	margin: auto;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-flow: row nowrap;
	    -ms-flex-flow: row nowrap;
	        flex-flow: row nowrap;
}
.list_item_btn{
	width: 200rpx;
	height: 80rpx;
	text-align: center;
	line-height: 80rpx;
	letter-spacing: 2rpx;
	font-size:36rpx;
	color: #000000;
	position: relative;
}
.list_item_btn.active{
	color:#8A3EDF;
}
.list_item_btn.active::before{
	content:"";
	width: 60rpx;
	height: 4rpx;
	background: #803ACE;
	position: absolute;
	left: 50%;
	bottom: 2rpx;
	-webkit-transform: translateX(-50%);
	    -ms-transform: translateX(-50%);
	        transform: translateX(-50%);
}
.list_box{
	width: 750rpx;
	height: auto;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	padding: 140rpx 0;
}
.ticket_item{
	width: 690rpx;
	height: auto;
	margin:2rpx auto 40rpx auto;
	padding:16rpx 16rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	background: #fff;
	border-radius: 10rpx;
	position: relative;
	-webkit-box-shadow:2rpx 4rpx 10rpx #ccc;
	        box-shadow:2rpx 4rpx 10rpx #ccc;
}
.ti_red{
	width: 240rpx;
	height: auto;
	text-align: center;
	color: #fff;
	background: #7A37C5;
	padding:6rpx 0;
	border-radius: 10rpx;
	font-size: 24rpx;
	position: absolute;
	right: 16rpx;
}
.ti_location{
	width: 64%;
	height: auto;
	font-size: 30rpx;
	margin:8rpx 0 16rpx 0;
}
.ti_name{
	font-size: 34rpx;
	width: 64%;
	height: auto;
}
.ti_desc,.ti_time{
	width: 80%;
	height: auto;
	font-size: 30rpx;
	margin-top: 12rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-flow: row nowrap;
	    -ms-flex-flow: row nowrap;
	        flex-flow: row nowrap;
	text-align: justify;
}
.ti_desc > .left,.ti_time > .left{
	white-space: nowrap;
}
.get_ticker_btn{
	position: absolute;
	top:50%;
	-webkit-transform: translateY(-50%);
	    -ms-transform: translateY(-50%);
	        transform: translateY(-50%);
	right:16rpx;
	width: 110rpx;
	padding: 0;
	height: 56rpx;
	line-height: 56rpx;
	font-size: 26rpx;
	color: #fff;
	background: #7A37C5;
	border-radius: 12rpx;
	outline: none;
}
.get_ticker_btn.null{
	background: #999;
}


