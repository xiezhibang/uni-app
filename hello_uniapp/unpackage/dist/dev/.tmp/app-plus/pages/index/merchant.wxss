page{
	position: relative;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.merchant_page{
	width: 750rpx;
	height: calc(100vh - 100rpx);
	position: relative;
}
.mt_tittle{
	top:-120rpx;
	left: 0;
	font-size: 50rpx;
	color:#000000;
}
.mt_list{
	width: 630rpx;
	height: 500rpx;
	top:46%;
}
.mt_item{
	width: 100%;
	height: 200rpx;
	position: relative;
	line-height: 200rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	font-size: 40rpx;
	color:#fff;
	background: #7A37C5;
	border-radius: 10rpx;
	padding-left: 160rpx;
	margin: 20rpx 0;
}
.mt_icon{
	width: 70rpx;
	top:50%;
	left: 60rpx;
	-webkit-transform: translateY(-50%);
	    -ms-transform: translateY(-50%);
	        transform: translateY(-50%);
	height: 0;
}
.mt_arrow{
	width: 20rpx;
	top:50%;
	right: 40rpx;
	-webkit-transform: translateY(-50%);
	    -ms-transform: translateY(-50%);
	        transform: translateY(-50%);
	height: 0;
}


