.ewm_box{
	width: 750rpx;
	height: 700rpx;
	position: relative;
}
.ewm_img_container{
	position: absolute;
	top:300rpx;
	left: 250rpx;
	width: 250rpx;
}
.ewm_img_container > image{
	width: 250rpx;
	display: block;
	height: 250rpx;
}
.ewm_img_container > .tip{
	width: 660rpx;
	text-align: center;
	position: absolute;
	bottom: -10rpx;
	left: 50%;
	-webkit-transform: translate(-50%,100%);
	    -ms-transform: translate(-50%,100%);
	        transform: translate(-50%,100%);
	font-size: 26rpx;
	color: #999;
}
.btn_box{
	position: relative;
}
.save_photoAlbum{
	width: 100%;
	height: 100%;
	position: absolute;
	top:100rpx;
	left: 0;
}
.shop_head{
	position: absolute;
	top:40rpx;
	left: 50%;
	-webkit-transform: translateX(-50%);
	    -ms-transform: translateX(-50%);
	        transform: translateX(-50%);
	width: 120rpx;
}
.shop_head > image{
	width: 120rpx;
	height: 120rpx;
	border-radius: 100%;
	display: block;
}
.shop_name,.shop_id{
	width:700rpx;
	height: 40rpx;
	font-size: 32rpx;
	color: #333;
	text-align: center;
	position: absolute;
	left:50%;
	-webkit-transform: translateX(-50%);
	    -ms-transform: translateX(-50%);
	        transform: translateX(-50%);
	bottom:-52rpx;
	overflow: hidden;
	-o-text-overflow: ellipsis;
	   text-overflow: ellipsis;
	white-space: nowrap;
}
.shop_name{
	font-weight: bold;
}
.shop_id{
	bottom:-102rpx;
	font-size: 28rpx;
	color: #999;
}

