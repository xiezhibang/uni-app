.fixBox{
	position: fixed;
	top:calc(128rpx + var(--status-bar-height));
	left:0;
	background: #fff;
	z-index: 1000;
	width: 750rpx;
	height: auto;
	padding-bottom: 10rpx;
}
.list_control{
	width: 750rpx;
	height: 80rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	padding:0 125rpx;
	margin: auto;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-flow: row nowrap;
	    -ms-flex-flow: row nowrap;
	        flex-flow: row nowrap;
}
.list_item_btn{
	width: 200rpx;
	height: 80rpx;
	text-align: center;
	line-height: 80rpx;
	letter-spacing: 2rpx;
	font-size:36rpx;
	color: #000000;
	position: relative;
}
.list_item_btn.active{
	color:#8A3EDF;
}
.list_item_btn.active::before{
	content:"";
	width: 60rpx;
	height: 4rpx;
	background: #803ACE;
	position: absolute;
	left: 50%;
	bottom: 2rpx;
	-webkit-transform: translateX(-50%);
	    -ms-transform: translateX(-50%);
	        transform: translateX(-50%);
}
.sys_msg_line{
	position: relative;
	height: 60rpx;
	width: 750rpx;
	background: #ffd9dc;
}
.sys_msg_line > image{
	width: 32rpx;
	position: absolute;
	top:50%;
	left: 30rpx;
	-webkit-transform: translateY(-50%);
	    -ms-transform: translateY(-50%);
	        transform: translateY(-50%);
	height: 0;
}
.msg_box{
	width: 650rpx;
	margin-left: 70rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	height: 100%;
	font-size: 30rpx;
	color: #ff4e5e;
	line-height: 60rpx;
	white-space: nowrap;
	overflow: hidden;
}
.list_out{
	width: 750rpx;
	padding-top: 140rpx;
}
