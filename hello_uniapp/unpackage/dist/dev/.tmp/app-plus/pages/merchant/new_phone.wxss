page{
	background:#f6f6f6;
}
.phone_block{
	width: 720rpx;
	margin:120rpx auto 0 auto;
	height: auto;
}
.phone_input{
	width: 540rpx;
	height: auto;
	margin: auto;
}
.phone_line{
	width: 100%;
	height: 100rpx;
	border-bottom: 1rpx solid #ccc;
	position: relative;
}
.phone_line > input{
	width: 62%;
	height: 50rpx;
	font-size: 28rpx;
	position: absolute;
	bottom: 12rpx;
	left: 0;
}
.check_code{
	width: 140rpx;
	height: 50rpx;
	position: absolute;
	right: 0;
	font-size: 24rpx;
	text-align: center;
	line-height: 48rpx;
	bottom: 12rpx;
	color:#7a37c5;
	border:1rpx solid #7a37c5;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	border-radius: 6rpx;
}
.check_code.wait{
	width: 180rpx;
	color:#999;
	border: 1rpx solid #999;
}
.grey_btn{
	background:#dddddd;
	color: #999999;
}
.next_btn{
	margin-top: 100rpx;
}


