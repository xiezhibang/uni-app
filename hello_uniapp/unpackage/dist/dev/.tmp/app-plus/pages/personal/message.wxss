page{
	background: #f2f2f2;
}
.tab_line{
	position: fixed;
	top:calc(128rpx + var(--status-bar-height));
	left: 0;
	width: 750rpx;
	z-index: 9999;
	background: #F2F2F2;
}
.top_tab{
	width: 720rpx;
	height: 80rpx;
	margin: auto;
}
.tab_box{
	width: 100%;
	height: 100%;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-flow: row nowrap;
	    -ms-flex-flow: row nowrap;
	        flex-flow: row nowrap;
}
.tab_item{
	width: 25%;
	height: 100%;
	line-height: 80rpx;
	text-align: center;
	font-size: 30rpx;
	color: #333333;
	position: relative;
}
.tab_item.active{
	font-size: 34rpx;
	color:#7a37c5;
}
.tab_item.active::before{
	content: "";
	width: 70rpx;
	height: 2rpx;
	background: #7A37C5;
	position: absolute;
	left: 50%;
	bottom: 12rpx;
	-webkit-transform: translateX(-50%);
	    -ms-transform: translateX(-50%);
	        transform: translateX(-50%);
}
.msg_list{
	width: 750rpx;
	height: auto;
	padding:100rpx 0 30rpx 0;
}
.msg_item{
	width: 690rpx;
	height: auto;
	padding:20rpx 20rpx;
	background: #fff;
	border-radius: 20rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	margin: 5rpx auto 25rpx auto;
}
.msg_block{
	width: 100%;
	height: auto;
	color: #000000;
	font-size: 26rpx;
	margin-bottom: 6rpx;
}
.msg_block.title{
	font-size: 34rpx;
	margin-bottom: 16rpx;
}
.msg_block.time{
	color:#999;
}
.msg_block.bright{
	color: #7A37C5;
}

