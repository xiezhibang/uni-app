
.arrowImg{
	position: absolute;
	top:50%;
	right:30rpx;
	-webkit-transform: translateY(-50%);
	    -ms-transform: translateY(-50%);
	        transform: translateY(-50%);
	width: 20rpx;
	height: 0;
}
.address_tip{
	width: 750rpx;
	position: relative;
	height: 170rpx;
	border-bottom: 1rpx solid #ccc;
}
.no_address_tip{
	position: absolute;
	top:50%;
	left: 30rpx;
	-webkit-transform: translateY(-50%);
	    -ms-transform: translateY(-50%);
	        transform: translateY(-50%);
	font-size: 38rpx;
	color: #000;
}
.have_address_info{
	width: 650rpx;
	height: auto;
	position: absolute;
	top:50%;
	-webkit-transform: translateY(-50%);
	    -ms-transform: translateY(-50%);
	        transform: translateY(-50%);
	left: 30rpx;
}
.address_detail{
	width: 100%;
	height: auto;
	font-size: 32rpx;
	color: #000000;
	text-align: justify;
}
.address_userInfo{
	width: 100%;
	margin-top: 6rpx;
	color:#000;
	font-size: 26rpx;
}
.goods_info{
	width: 750rpx;
	position: relative;
	height: 300rpx;
}
.goods_img{
	width: 300rpx;
	height: 200rpx;
	position: absolute;
	top: 50%;
	left: 30rpx;
	-webkit-transform: translateY(-50%);
	    -ms-transform: translateY(-50%);
	        transform: translateY(-50%);
}
.goods_desc{
	position: absolute;
	top:50%;
	right: 30rpx;
	-webkit-transform: translateY(-50%);
	    -ms-transform: translateY(-50%);
	        transform: translateY(-50%);
	width: 360rpx;
	font-size: 30rpx;
	text-align: justify;
}
.goods_desc > text{
	display: block;
	margin-top: 10rpx;
	font-size:38rpx;
	color:red;
}
.pay_method{
	width: 750rpx;
	padding-left: 30rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	font-size: 36rpx;
}
.pay_list{
	width: 750rpx;
	height: auto;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-flow: row nowrap;
	    -ms-flex-flow: row nowrap;
	        flex-flow: row nowrap;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	    -ms-flex-pack: center;
	        justify-content: center;
}
.pay_item{
	width: 100rpx;
	height: auto;
	margin:30rpx 40rpx;
}
.pay_item > image{
	width: 100%;
	display: block;
	height: 0;
}
.pay_btn{
	position: fixed;
	bottom:50rpx;
	left: 40rpx;
}
.order_box{
	margin-top: 10rpx;
	margin-bottom: 10rpx;
	width: 750rpx;
	padding:40rpx 0;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	border-top: 1rpx solid #ccc;
	border-bottom: 1rpx solid #ccc;
}
.order_line.double{
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-flow: row nowrap;
	    -ms-flex-flow: row nowrap;
	        flex-flow: row nowrap;
}
.left_word{
	width: 60%;
}
.right_word{
	width:40%;
	text-align: right;
	color: #FF0000;
}
.order_line{
	font-size: 30rpx;
	color: #333;
	padding:5rpx 30rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	width: 750rpx;
}
.order_line.purple{
	color: #8a3edf;
}
.backRecommendPage{
	width: 300rpx;
	height: 60rpx;
	margin:50rpx auto 0 auto;
	background: #7A37C5;
	color: #fff;
	font-size: 30rpx;
	line-height: 60rpx;
	text-align: center;
	border-radius: 30rpx;
}
.backView{
	position: fixed;
	top:var(--status-bar-height);
	left: 0;
	z-index: 20000;
	width: 150rpx;
	height: 128rpx;
}

