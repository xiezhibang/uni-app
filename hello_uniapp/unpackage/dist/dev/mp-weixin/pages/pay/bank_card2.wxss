.head_row{
	height: 128rpx;
	background: #fff;
	text-align: center;
	line-height:128rpx;
	color:#000;
	font-size: 38rpx;
	box-sizing: border-box;
	border-bottom: 1rpx solid #f6f6f6;
	position: relative;
}
.head_row > .back_before{
	position: absolute;
	top:0;
	left: 0;
	width: 100rpx;
	height: 128rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-flow: row nowrap;
	        flex-flow: row nowrap;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
}
.head_row > .back_before > image{
	width: 22rpx;
	position: relative;
	top:42rpx;
	height: 0;
}
.addCard{
	width: 200rpx;
	height: 128rpx;
	text-align: right;
	line-height: 128rpx;
	padding-right: 40rpx;
	box-sizing: border-box;
	position: absolute;
	top:0;
	right: 0;
	font-size: 60rpx;
	color:#333;
}
page{
	background: #f4f4f4;
}
.main_block{
	width: 700rpx;
	height: auto;
	padding:25rpx 25rpx;
}
.bank_item{
	width: 700rpx;
	height: 200rpx;
	border-radius: 20rpx;
	margin-bottom: 20rpx;
	background:#E4D667;
	position: relative;
	color: #fff;
	box-shadow: 2rpx 4rpx 6rpx #ccc;
}
.bank_item.double{
	background:#EC9D41;
}
.del_img{
	width: 40rpx;
	height: 40rpx;
	position: absolute;
	top:26rpx;
	right: 40rpx;
}
.bank_name{
	width: 100%;
	height: 100rpx;
	padding:0 80rpx 0 160rpx;
	box-sizing: border-box;
	line-height: 100rpx;
	font-size: 32rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}
.bank_code{
	width: 100%;
	padding:0 80rpx 0 160rpx;
	box-sizing: border-box;
	font-size: 30rpx;
}
.bank_icon{
	position: absolute;
	top:20rpx;
	left: 20rpx;
	width: 70rpx;
	height: 70rpx;
	background: #F2F2F2;
	border-radius: 100%;
	text-align: center;
	line-height: 70rpx;
	font-size: 32rpx;
	color: #00BFFF;
}
.bank_icon > image{
	position: absolute;
	top:0;
	left: 0;
	width: 100%;
	height: 100%;
	background: #fff;
	border-radius: 100%;
}


