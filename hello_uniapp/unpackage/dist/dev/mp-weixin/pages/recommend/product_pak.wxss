.member_btn{
	position: fixed;
	bottom:50rpx;
	left: 40rpx;
}
.product_list{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-flow: row wrap;
	        flex-flow: row wrap;
	-webkit-box-pack: start;
	-webkit-justify-content: flex-start;
	        justify-content: flex-start;
	width: 750rpx;
}
.product_item{
	width: 330rpx;
	height: auto;
	max-height: 440rpx;
	position: relative;
	margin: 36rpx 0 0 30rpx;
}
.product_image{
	width: 100%;
	display: block;
	margin: auto;
	height: 200rpx;
	max-height: 300rpx;
}
.product_name{
	width: 100%;
	box-sizing: border-box;
	padding:2rpx 4rpx;
	height: 80rpx;
	font-size: 28rpx;
	text-align: justify;
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
}
.product_price{
	position: relative;
	width: 100%;
	height: 60rpx;
	color:red;
	font-size: 38rpx;
	box-sizing: border-box;
	line-height: 60rpx;
}
.product_get{
	position: absolute;
	top:10rpx;
