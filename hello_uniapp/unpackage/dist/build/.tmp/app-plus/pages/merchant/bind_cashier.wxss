page{
	background: #F2F2F2;
}
.head_box{
	margin:60rpx auto 20rpx auto;
	width: 120rpx;
	border-radius: 100%;
	overflow: hidden;
}
.head_box > image{
	width: 100%;
	height: 0;
	display: block;
}
.head_desc{
	width: 100%;
	text-align: center;
	font-size: 28rpx;
	color: #999999;
}
.input_phone{
	display: block;
	margin:60rpx auto 120rpx auto;
	outline:none;
	border:none;
	border-bottom: 1rpx solid #999999;
	width: 500rpx;
	height: 60rpx;
	font-size: 30rpx;
	color: #333333;
}
.bind_ok{
	width: 120rpx;
	height: 40rpx;
	background: #42AE3C;
	border-radius: 10rpx;
	text-align: center;
	line-height: 40rpx;
	font-size: 24rpx;
	color: #fff;
	margin:10rpx auto 5rpx auto;
}

