.list_control{
	width: 750rpx;
	height: 80rpx;
	box-sizing: border-box;
	padding:0 125rpx;
	margin: auto;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-flow: row nowrap;
	        flex-flow: row nowrap;
	position: fixed;
	top:calc(128rpx + var(--status-bar-height));
	left:0;
	background: #fff;
	z-index: 1000;
	
}
.list_item_btn{
	width: 200rpx;
	height: 80rpx;
	text-align: center;
	line-height: 80rpx;
	letter-spacing: 2rpx;
	font-size:36rpx;
	color: #000000;
	position: relative;
}
.list_item_btn.active{
	color:#8A3EDF;
}
.list_item_btn.active::before{
	content:"";
	width: 60rpx;
	height: 4rpx;
	background: #803ACE;
	position: absolute;
	left: 50%;
	bottom: 6rpx;
	-webkit-transform: translateX(-50%);
	        transform: translateX(-50%);
}
.log_list_box{
	padding-top: 80rpx;
}
.log_list_box,.month_list_box{
	width: 750rpx;
	height: auto;
}
.month_line{
	width: 100%;
	height: 60rpx;
	line-height: 60rpx;
	box-sizing: border-box;
	padding-left: 30rpx;
	color:#999;
	background: #f2f2f2;
	font-size: 32rpx;
}
.log_item{
	width: 100%;
	position: relative;
	height: 140rpx;
	border-bottom: 1rpx solid #f2f2f2;
}
.money_num{
	position: absolute;
	right: 60rpx;
	top: 50%;
	-webkit-transform: translateY(-50%);
	        transform: translateY(-50%);
	color: red;
}
.log_desc{
	position: absolute;
	top:50%;
	-webkit-transform: translateY(-50%);
	        transform: translateY(-50%);
	left: 60rpx;
	text-align: left;
	width: 500rpx;
	font-size: 32rpx;
	color: #000000;
}
.log_time{
	width: 360rpx;
	font-size: 26rpx;
	color: #999999;
	margin-top: 4rpx;
}


