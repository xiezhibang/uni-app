.ewm_box{
	width: 750rpx;
	height: 660rpx;
	position: relative;
}
.ewm_desc{
	position: absolute;
	top:120rpx;
	left: 0;
	width: 100%;
	text-align: center;
	font-size: 30rpx;
}
.ewm_img_container{
	position: absolute;
	top:240rpx;
	left: 250rpx;
	width: 250rpx;
}
.ewm_img_container > image{
	width: 250rpx;
	display: block;
	height: 250rpx;
}
.ewm_img_container > .tip{
	width: 100%;
	text-align: center;
	position: absolute;
	bottom: -10rpx;
	-webkit-transform: translateY(100%);
	        transform: translateY(100%);
	font-size: 26rpx;
	color: #000000;
}
.btn_box{
	position: relative;
}
.save_photoAlbum{
	width: 100%;
	height: 100%;
	position: absolute;
	top:100rpx;
	left: 0;
}
.useMethod{
	margin-top: 30rpx;
	width: 100%;
	padding:20rpx 80rpx;
	box-sizing: border-box;
	font-size: 24rpx;
	color: #999;
	text-align: left;
	line-height: 1.5;
}

