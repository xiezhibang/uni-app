.topRow{
	position: relative;
	width: 750rpx;
	height: 100rpx;
}
.fix_board{
	width: 750rpx;
	height: auto;
	position: fixed;
	top:calc(128rpx + var(--status-bar-height));
	left: 0;
	z-index: 2000;
	background: #fff;
	
}
.time_row{
	position: absolute;
	top:50%;
	left: 50%;
	-webkit-transform: translate(-50%,-50%);
	        transform: translate(-50%,-50%);
	width: 600rpx;
	height: 50rpx;
	line-height: 48rpx;
	font-size: 24rpx;
}
.pik_obj{
	width:200rpx;
	height: 50rpx;
	display: inline-block;
	border:1rpx solid #aaa;
	box-sizing: border-box;
	font-size: 24rpx;
	color:#333333;
	padding-left: 10rpx;
	line-height: 48rpx;
	margin:0 6rpx;
	border-radius: 4rpx;
	position: relative;
}
.icon_triangle{
	position: absolute;
	top:50%;
	-webkit-transform: translateY(-50%);
	        transform: translateY(-50%);
	right: 20rpx;
	width: 16rpx;
	height: 0;
}
.search_btn{
	position: absolute;
	top:50%;
	right: 10rpx;
	-webkit-transform: translateY(-50%);
	        transform: translateY(-50%);
	width: 120rpx;
	height: 40rpx;
	line-height: 40rpx;
	background: #803ACE;
	color:#fff;
	font-size: 26rpx;
	padding: 0;
}
.list_control{
	width: 750rpx;
	height: 80rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-flow: row nowrap;
	        flex-flow: row nowrap;
}
.list_item_btn{
	width: 250rpx;
	height: 80rpx;
	text-align: center;
	line-height: 80rpx;
	letter-spacing: 2rpx;
	font-size:36rpx;
	color: #000000;
	position: relative;
}
.list_item_btn.active{
	color:#8A3EDF;
}
.list_item_btn.active::before{
	content:"";
	width: 60rpx;
	height: 4rpx;
	background: #803ACE;
	position: absolute;
	left: 50%;
	bottom: 10rpx;
	-webkit-transform: translateX(-50%);
	        transform: translateX(-50%);
}
.list_container{
	width: 750rpx;
	padding-top:240rpx;
}
.list_head{
	width: 100%;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-flow: row nowrap;
	        flex-flow: row nowrap;
	height: 60rpx;
	background: #fff;
	border-bottom: 1rpx solid #ccc;
	box-sizing: border-box;
	background: #f2f2f2;
}
.list_head > view{
	width: 187.5rpx;
	height: 60rpx;
	text-align: center;
	line-height: 60rpx;
	font-size: 30rpx;
	color:#000000;
}
.row_item{
	position: relative;
	width: 750rpx;
	height: 160rpx;
	margin:auto;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-flow: row nowrap;
	        flex-flow: row nowrap;
}
.row_item::before{
	content: "";
	width: 96%;
	left: 2%;
	height: 1rpx;
	background: #ccc;
	position: absolute;
	bottom: 0;
}
.row_item > view{
	width:187.5rpx;
	height: 160rpx;
	position: relative;
}
.img_block{
	width: 150rpx;
}
.img_block > image{
	display: block;
	width: 70rpx;
	margin:0 auto 6rpx auto;
	height: 70rpx;
	background: #F2F2F2;
	border-radius: 100%;
}
.img_block > view{
	width: 100%;
	text-align: center;
	font-size: 24rpx;
	color:#000000;
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
}
.price_block{
	position: absolute;
	top:50%;
	left: 50%;
	-webkit-transform: translate(-50%,-50%);
	        transform: translate(-50%,-50%);
	width: 90%;
	height: auto;
	word-wrap: break-word;
	text-align: center;
	font-size: 30rpx;
	color: red;
}
.time_block{
	width: 100%;
	height: 80rpx;
	font-size: 24rpx;
	text-align: center;
	color:#999999;
}
.order_num_block{
	width: 90%;
	height: auto;
	font-size: 26rpx;
	word-wrap: break-word;
	text-align: center;
}

